<!DOCTYPE html>
<html lang="en">
<head>
  <%- include(`../partials/head`) %>
  <meta content="<%= bot.user.username %> Website" property="og:title">
  <meta content="<%= bot.application.description %>" property="og:description">
  <meta content="<%= bot.protocol + bot.config.dashboard.domain %>/" property="og:url">
  <meta content="https://cdn.discordapp.com/avatars/<%= bot.user.id %>/<%= bot.user.avatar %>.png?size=2048" property="og:image">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Preloader -->
  <%- include(`../partials/preloader`) %>

  <!-- Navbar -->
  <%- include(`../partials/navbar`) %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%- include(`../partials/sidebar`) %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Home</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item active">Home</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Top Row (buttons/botinfo) -->
        <div class="row">
          <div class="col-lg-8 col-12 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-5 text-center">
                    <img src="https://cdn.discordapp.com/avatars/<%= bot.user.id %>/<%= bot.user.avatar %>.png?size=256" style="height: 192px; width: 192px;"  alt="user-avatar" class="img-circle img-fluid">
                  </div>
                  <div class="col-7">
                    <h1><b><%= bot.user.username %> Discord Bot</b></h1>
                    <p class="text-lg text-muted"><%= bot.application.description %></p>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
          <div class="col-lg-4 col-12 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-12">
                    <h1><b>Join over <%= bot.users.cache.size %> users<br>in <%= bot.guilds.cache.size %> servers!</b></h1>
                    
                  </div>
                  <div class="col-6">
                    <a type="button" class="btn btn-success btn-block" href="<%= bot.protocol + bot.config.dashboard.domain %>/invite"></i>Invite Bot</a>
                  </div>
                  <div class="col-6">
                    <a type="button" class="btn btn-info btn-block" href="<%= bot.protocol + bot.config.dashboard.domain %>/login"><i class="fab fa-discord"></i> Login</a>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->

        <!-- Main Row (Bot things) -->
        <div class="row">
          <div class="col-12 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-7 text-center">

                  </div>
                  <div class="col-5">
                    <h1><b>Welcome Messages & Auto Roles</b></h1>
                    <p class="text-lg text-muted"><%= bot.user.username %> is the all in one Discord bot for all your needs.</p>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <div class="col-12 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <div class="row">
                <div class="col-5">
                    <h1><b>Levels & XP</b></h1>
                    <p class="text-lg text-muted"><%= bot.user.username %> is the all in one Discord bot for all your needs.</p>
                  </div>
                  <div class="col-7 text-center">

                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <div class="col-12 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-7 text-center">

                  </div>
                  <div class="col-5">
                    <h1><b>Extensive Event Logging</b></h1>
                    <p class="text-lg text-muted"><%= bot.user.username %> is the all in one Discord bot for all your needs.</p>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->

        <!-- Bottom Row (supoort/premium/things) -->
        <div class="row">
          <div class="col-4 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <h3 class="text-center"><b>Docs</b></h3>
                <p class="text-lg text-muted text-center">e</p>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
          <div class="col-4 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <h3 class="text-center"><b>Support</b></h3>
                <p class="text-lg text-muted text-center">e</p>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
          <div class="col-4 connectedSortable">
            <div class="card d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0"></div>
              <div class="card-body pt-0">
                <h3 class="text-center"><b>Premium</b></h3>
                <p class="text-lg text-muted text-center">e</p>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->

      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <%- include(`../partials/footer`) %>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

  <%- include(`../partials/doc_end`) %>
</body>
</html>
